{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "node",
    "lib": ["es6", "es2017"],
    "outDir": "build",
    "rootDir": "/",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["node", "mocha"],
    "resolveJsonModule": true,
    "strict": false,
  },
  "ts-node": {
    "files": true,
  },
  "include": ["**/*.ts", "**/*.js" ],
  "exclude": ["node_modules", "build"]
}
